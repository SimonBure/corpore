// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}


model Exercise {
  id                  Int    @id @default(autoincrement())
  name                String
  defaultSets         Int
  defaultReps         Int
  defaultRestBetweenSets Int
  defaultRestAfter    Int
}

model Session {
  id          Int      @id @default(autoincrement())
  title       String
  date        DateTime
  warmupTime  Int
  isTemplate  Boolean
}

model SessionExercise {
  sessionId          Int
  exerciseId         Int
  sets               Int
  reps               Int
  restBetweenSets    Int
  restAfter          Int

  @@id([sessionId, exerciseId])
  @@index([exerciseId])
  @@index([sessionId])
}
